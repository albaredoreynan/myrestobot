<%= semantic_form_for([:account, :setup_module, :inventory_setup, @item], :html => { :class => "form-horizontal" }) do |item_f| %>
  <%= item_f.semantic_errors %>
  <div class="well">
	<%= item_f.input :concept_id, :as => :select, :collection => Concept.all.map{ |b| [ b.name, b.id ] } %>
	<%= item_f.input :subcategory_id, :as => :select, :collection => Subcategory.all.map{ |b| [ b.name, b.id ] }%>
    <%= item_f.input :name %>
    <%= item_f.input :unit_id, :as => :select, :collection => Unit.all.map{ |b| [ b.name, b.id ] } %>
    <%= item_f.input :quantity %>
    <%= item_f.input :group, :as => :select, :collection => [ "inventory", "non-inventory", "prepared" ] %>
    <%= item_f.input :cost %>
    <%= item_f.input :is_active, :as => :boolean %>
  </div>
  <%= link_to "Cancel".html_safe, account_setup_module_inventory_setup_items_path, :class => 'btn' %>
  <%= item_f.submit "Submit", :class => 'btn btn-light-blue large' %>
<% end %>