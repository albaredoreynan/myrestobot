<%= render :partial => "/account/setup_module/organization_setup/partials/container_header" %>
<div class="container">
<h2>User</h2>
<div class="well">
  <h3>User Information</h3>
  <dl class="dl-horizontal">
    <dt>Username</dt>
      <dd><%= @client_user.username %></dd>
    <dt>Email</dt>
      <dd><%= @client_user.email %></dd>
    <dt>Branch</dt>
      <dd><%= @client_user.branch.name %></dd>
    <dt>Restaurant</dt>
      <dd><%= @client_user.concept.name %></dd>
    <dt>Company</dt>
      <dd><%= @client_user.client.name %></dd>    
  </dl>
</div>

<%= link_to "<i class='icon-chevron-left'></i> Back to Users".html_safe, account_setup_module_organization_setup_client_users_path, :class => 'btn' %>
<%= link_to "<i class='icon-trash icon-white'></i> Delete".html_safe, account_setup_module_organization_setup_client_users_path(@role), :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger' %>
<%= link_to "<i class='icon-edit'></i> Edit".html_safe, edit_account_setup_module_organization_setup_client_user_path, :class => 'btn' %>
</div>
<br/>
<%= render :partial => "/account/setup_module/organization_setup/partials/container_footer" %>