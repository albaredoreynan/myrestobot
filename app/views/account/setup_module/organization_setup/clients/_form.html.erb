<%= semantic_form_for([:account, :setup_module, :organization_setup, @client], :html => { :class => "form-horizontal" }) do |client_f| %>
  <%= client_f.semantic_errors %>
  <div class="well">
    <%= client_f.input :name %>
    <%= client_f.input :address %>
    <%= client_f.input :contact_number %>
  </div>
  <%= link_to "Cancel".html_safe, account_setup_module_organization_setup_clients_path, :class => 'btn' %>
  <%= client_f.submit "Submit", :class => 'btn btn-light-blue large' %>
<% end %>